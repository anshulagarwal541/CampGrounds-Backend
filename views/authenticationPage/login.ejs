<%- layout("layouts/boilerplate") %>


    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card col-md-6 offset-md-3 shadow">
                <div class="card-body">
                    <div class="text-left">
                        <h1>Login</h1>
                    </div>
                    <form action="/login" method="POST" novalidate class="validateForm">
                        <div class="mb-3">
                            <label for="username" class="form-label">username:</label>
                            <input type="text" id="username" autofocus required class="form-control" name="username">
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">Password:</label>
                            <input type="password" id="password" required class="form-control" name="password">
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <button class="btn btn-success btn-block mb-3">Login</button>
                    </form>
                </div>
            </div>
        </div>
    </div>